{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"windows": {
        "options": {
			"env": {
				"Path": "${config:terminal.integrated.env.windows.Path}"
			}
		}
	},
    "presentation": {
		"echo": false,
		"reveal": "always",
		"focus": true,
		"panel": "shared",
		"clear": false,
		"showReuseMessage": true
	},
    "tasks": [
		{
			"label": "Build & Run",
			"command": "mingw32-make; ./main.exe",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
		}
    ]
}